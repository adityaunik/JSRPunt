<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <action android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"
        app:launchSingleTop="true"/>


    <fragment
        android:id="@+id/home"
        android:name="com.aditya.jsrpunt.views.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_id"
            app:destination="@id/id" />
        <action
            android:id="@+id/action_home_to_transaction"
            app:destination="@id/transaction" />
        <action
            android:id="@+id/action_home_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_home_to_wallet"
            app:destination="@id/wallet" />
    </fragment>
    <fragment
        android:id="@+id/enterNumberFragment"
        android:name="com.aditya.jsrpunt.views.EnterNumberFragment"
        android:label="fragment_enter_number"
        tools:layout="@layout/fragment_enter_number">
        <action
            android:id="@+id/action_enterNumberFragment_to_OTPFragment"
            app:destination="@id/OTPFragment"/>

    </fragment>
    <fragment
        android:id="@+id/transaction"
        android:name="com.aditya.jsrpunt.views.TransactionsFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transactions" />
    <fragment
        android:id="@+id/id"
        android:name="com.aditya.jsrpunt.views.IDsFragment"
        android:label="ID"
        tools:layout="@layout/fragment_i_ds" >
        <action
            android:id="@+id/action_id_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_id_to_withdrawIdFragment"
            app:destination="@id/withdrawIdFragment" />
        <action
            android:id="@+id/action_id_to_depositIdFragment"
            app:destination="@id/depositIdFragment" />
        <action
            android:id="@+id/action_id_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/id"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.aditya.jsrpunt.views.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.aditya.jsrpunt.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_enterNumberFragment"
            app:destination="@id/enterNumberFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.aditya.jsrpunt.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_registerFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.aditya.jsrpunt.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p" >
        <action
            android:id="@+id/action_OTPFragment_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/OTPFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="phone"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/notification"
        android:name="com.aditya.jsrpunt.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.aditya.jsrpunt.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_paymentMethodFragment"
            app:destination="@id/paymentMethodFragment" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="urlImage"
            app:argType="string" />
        <action
            android:id="@+id/action_paymentFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/paymentFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/paymentMethodFragment"
        android:name="com.aditya.jsrpunt.PaymentMethodFragment"
        android:label="Payment Method"
        tools:layout="@layout/fragment_payment_method" >
        <argument
            android:name="amount"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument android:name="name"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string" />
        <action
            android:id="@+id/action_paymentMethodFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/paymentMethodFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/terms"
        android:name="com.aditya.jsrpunt.TermsFragment"
        android:label="Terms"
        tools:layout="@layout/fragment_terms" />
    <fragment
        android:id="@+id/wallet"
        android:name="com.aditya.jsrpunt.WalletFragment"
        android:label="Wallet"
        tools:layout="@layout/fragment_wallet" >
        <action
            android:id="@+id/action_walletFragment_to_depositWalletFragment"
            app:destination="@id/depositWalletFragment" />
        <action
            android:id="@+id/action_walletFragment_to_withdrawWalletFragment"
            app:destination="@id/withdrawWalletFragment" />
    </fragment>
    <fragment
        android:id="@+id/depositWalletFragment"
        android:name="com.aditya.jsrpunt.DepositWalletFragment"
        android:label="Deposit"
        tools:layout="@layout/fragment_deposit_wallet" >
        <action
            android:id="@+id/action_depositWalletFragment_to_depositWalletPaymentFragment"
            app:destination="@id/depositWalletPaymentFragment"/>
    </fragment>
    <fragment
        android:id="@+id/withdrawWalletFragment"
        android:name="com.aditya.jsrpunt.WithdrawWalletFragment"
        android:label="Withdraw"
        tools:layout="@layout/fragment_withdraw_wallet" >
        <action
            android:id="@+id/action_withdrawWalletFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/withdrawWalletFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/depositIdFragment"
        android:name="com.aditya.jsrpunt.DepositIdFragment"
        android:label="Deposit"
        tools:layout="@layout/fragment_deposit_id" >
        <action
            android:id="@+id/action_depositIdFragment_to_depositIdPaymentFragment"
            app:destination="@id/depositIdPaymentFragment" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_depositIdFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/depositIdFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/withdrawIdFragment"
        android:name="com.aditya.jsrpunt.WithdrawIdFragment"
        android:label="Withdraw"
        tools:layout="@layout/fragment_withdraw_id" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string" />
        <action
            android:id="@+id/action_withdrawIdFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/withdrawIdFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/depositWalletPaymentFragment"
        android:name="com.aditya.jsrpunt.DepositWalletPaymentFragment"
        android:label="Payment Method"
        tools:layout="@layout/fragment_deposit_wallet_payment" >
        <action
            android:id="@+id/action_depositWalletPaymentFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/depositWalletPaymentFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="amount"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/depositIdPaymentFragment"
        android:name="com.aditya.jsrpunt.DepositIdPaymentFragment"
        android:label="Payment Method"
        tools:layout="@layout/fragment_deposit_id_payment" >
        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="amount"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_depositIdPaymentFragment_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_left"
            app:popUpTo="@id/depositIdPaymentFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/details"
        android:name="com.aditya.jsrpunt.WithdrawlDetailFragment"
        android:label="Withdrawl Details"
        tools:layout="@layout/fragment_withdrawl_detail" />
</navigation>